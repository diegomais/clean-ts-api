{
  "name": "clean-ts-api",
  "version": "0.0.1",
  "description": "Rest API in NodeJS using TypeScript, Test Driven Development, Clean Architecture and Design Patterns.",
  "main": "dist/main/server.js",
  "scripts": {
    "prepare": "husky install",
    "start:dev": "nodemon --watch src --ext json,ts --exec 'ts-node' src/main/server.ts",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:ci": "npm test -- --coverage",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diegomais/clean-ts-api.git"
  },
  "keywords": [
    "node",
    "typescript",
    "tdd",
    "clean architecture",
    "design patterns"
  ],
  "author": "Diego Mais <diegomais.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diegomais/clean-ts-api/issues"
  },
  "homepage": "https://github.com/diegomais/clean-ts-api#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "mongodb": "^4.15.0",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^5.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.14",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.7.3",
    "husky": "^8.0.0",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "npm run test:staged"
    ]
  }
}
